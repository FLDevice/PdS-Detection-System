        <Button Content="Go to Map" HorizontalAlignment="Left" Margin="1240,538,0,0" VerticalAlignment="Top" Width="75" Click="GoToMapClick"/>

        <Grid.Background>
            <ImageBrush ImageSource="app_bg.png"/>
        </Grid.Background>
    </Grid>
</Window>
